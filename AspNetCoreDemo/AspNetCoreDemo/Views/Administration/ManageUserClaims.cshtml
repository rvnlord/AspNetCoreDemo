@model UserClaimsViewModel

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Claims</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <label asp-for="@Model.Claims[i].IsSelected" class="my-checkbox-container">
                        <input asp-for="@Model.Claims[i].IsSelected" type="checkbox">
                        <span class="my-checkmark"></span>
                        <span style="cursor: pointer" class="my-checkbox-label">@Model.Claims[i].ClaimType</span>
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>